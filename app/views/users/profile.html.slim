section.ly_main_inner.bl_formPage
  .bl_pageHead
    .bl_pageTitle
      h2 プロフィール編集
  .bl_form
    = form_with model: @user do |f|
      = render 'shared/error_messages', model: f.object
      .bl_list_item_title
        p = f.label :プロフィール画像
      .bl_list_item_content
        .bl_userInfo
          .bl_img
            - if @user.image?
              = image_tag(@user.image.url, class: 'el_profileImg__lg')
            - else
              = image_tag('user/default_user_icon.png', class: 'el_profileImg__lg')
          .bl_formInput__img
            = f.label :image, class: 'el_btn el_imgInput'
              = f.file_field :image
      .bl_list_item_title
        p = f.label :ニックネーム
      .bl_list_item_content
        = f.text_field :name, value: @user.name, placeholder:"名前を入力"
      .bl_list_item_title
        p = f.label :自己紹介
      .bl_list_item_content
        = f.text_area :introduction, value: @user.introduction, placeholder:"自己紹介を入力"
      .bl_btn
        = f.submit 'プロフィールを更新', class: 'el_btn__blue'
